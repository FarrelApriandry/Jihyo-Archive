---

import '../styles/global.css';
import Navbar from '../components/react/Navbar';

interface Props {
	title: string;
}

const { title } = Astro.props || "Jihyo Archive"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Park Jihyo Archive</title>
	</head>
	<body>
		<Navbar client:load />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
