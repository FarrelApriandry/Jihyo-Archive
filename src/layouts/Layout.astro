---

import '../styles/global.css';
import Navbar from '../components/react/Navbar';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { 
	title, 
	description = "A curated digital sanctuary of TWICE's Leader, Park Jihyo. Exploring her artistry and legacy.",
	image = "/jihyo-og.png" // public/jihyo-og.png
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Park Jihyo Archive</title>

		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={`$title} | Park Jihyo Archive`} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={`$title} | Park Jihyo Archive`} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />
	</head>
	<body>
		<Navbar client:load />
		<slot />
	</body>
</html>

<style>
	html{
		scroll-behavior: smooth;
        scroll-padding-top: 5rem; 
        background-color: #0a0a0a;
        color: white;
	}
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
	}
</style>
